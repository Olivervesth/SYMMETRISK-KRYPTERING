<Window x:Class="Symmetriskcrypt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Symmetriskcrypt"
        mc:Ignorable="d"
        Title="MainWindow" Height="343.949" Width="487.468" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid Margin="0,0,2,0">
        <Button x:Name="Generate" Content="Generate Key and IV" HorizontalAlignment="Left" Margin="10,68,0,0" VerticalAlignment="Top" Width="124" Click="GenerateKeyAndIV"/>
